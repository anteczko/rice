[colors]
clear = #0

grey = #ffcdc9b0
lgrey = #ffdad4bb
vdgrey = #ff4e4b42
dgrey = #ffb4af9a

red = #ffcd664d
blue = #ff3da89e

yellow = #ffe7ddaf
lbrown = #ffc0b4960
brown = #ffbc9d83
dbrown = #8b7e67

[bar/tabs]
width=100%
height=5%
modules-center=i3

underline-size=0
underline-color=${colors.red}

border-top-size = 33%
background = ${colors.clear}

font-0 = "SCE\-PS3 Rodin LATIN:style=Regular:size=22;6"

[bar/tabsSmall]
width=100%
height=2%
modules-center=i3s
background = ${colors.clear}
font-0 = "SCE\-PS3 Rodin LATIN:style=Regular:size=22;6"




[module/i3]
type = internal/i3
format = <label-state> <label-mode>
label-mode = %mode%

ws-icon-0 = 1;♚
ws-icon-1 = 2;♛
ws-icon-2 = 3;♜
ws-icon-3 = 4;♝
ws-icon-4 = 5;♞
ws-icon-5 = 6;A
ws-icon-6 = 7;E
ws-icon-default = ♟

label-focuesd = %icon% %name%
label-focused-foreground = ${colors.lgrey}
label-focused-background = ${colors.vdgrey}
label-focused-padding-right = 5%
label-focused-margin = 3%


label-unfocuesd = %icon% %name%
label-unfocused-foreground = ${colors.vdgrey}
label-unfocused-background = ${colors.dgrey}
label-unfocused-padding-right = 5%
label-unfocused-margin = 3%


[module/i3s]
type = internal/i3
format = <label-state> <label-mode>

label-focuesd = %name%
label-focused-foreground = ${colors.vdgrey}
label-focused-background = ${colors.vdgrey}
label-focused-padding-right = 5%
label-focused-margin = 3%


label-unfocuesd = %name%
label-unfocused-foreground = ${colors.clear}
label-unfocused-background = ${colors.clear}
label-unfocused-padding-right = 5%
label-unfocused-margin = 3%

[bar/phantom]
modules-center=text
bottom=true
background = ${colors.clear}
width=100%
height=5%


[module/text]
type = custom/text
font-0 = "SCE\-PS3 Rodin LATIN:style=Regular:size=22;6"
font-1 = "Font Awesome 5 Free;size=20"

content = %{T3}SAY%{T- NIGGER
